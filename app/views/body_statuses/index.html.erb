<h2>BODY_STATUS</h2>
<td>体重：<%# body_statuses.weight %></td>
<% if @user %>
  <table>
    <tbody>
      <tr>
        <td>生年月日：</td>
        <td><%= current_user.birthdate %></td>
      </tr>
      <tr>
        <td>電話番号：</td>
        <td><%= current_user.phone_number %></td>
      </tr>
      <% if !@body_status.nil? %>
        <tr>
          <td>本日のSTATUS</td>
          <td>体重：<%= @body_status.weight %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to "本日のSTATUSを入力する", new_body_status_path %>
