<div class = "container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2 class="mt-4 mb-5 head-line title_h2 fas fa-edit">STATUS編集</h2>
      <div class="mb-5">
        <% if @body_status.errors.any? %>
          <%= @body_status.errors.count %>件の未記入があります
          <% @body_status.errors.full_messages.each do |message| %>
            <strong><p><%= message %></p></strong><br />
          <% end %>
        <% end %>
      </div>
      <%= form_with model:@body_status, local:true do |f| %>
        <div class="form-group col-md-12">
          <%= f.label :体重, class: "col-md-4 control-label" %>
          <%= f.number_field :weight, autofocus: true, autocomplete: "weight", class: "col-md-4", placeholder: '00' %> kg
        </div>
        
        <div class="form-group col-md-12">
          <%= f.label :摂取カロリー, class: "col-md-4 control-label" %>
          <%= f.number_field :ingestion_cal, autofocus: true, autocomplete: "ingestion_cal", class: "col-md-4", placeholder: '0000' %> kcal
        </div>
        
        <div class="form-group col-md-12">
          <%= f.label :消費カロリー, class: "col-md-4 control-label" %>
          <%= f.number_field :consumed_cal, autofocus: true, autocomplete: "consumed_cal", class: "col-md-4", placeholder: '0000' %> kcal
        </div>
        
        <div class="action mt-5">
          <%= f.submit "編集を保存する", class: "btn btn-success mr-3" %>
        </div>
      <% end %>
      <div class="text-center">
        <h4 class="mt-5 mb-5 head-line title_h4 fas fa-swimmer">
          <%= link_to "BODY_STATUS", body_statuses_path %>
        </h4>
      </div>
    </div>
  </div>
</div