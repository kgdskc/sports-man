<% if current_user.following?(user) %>
  <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "glyphicon glyphicon-pencil fas fa-user-minus  btn btn-warning mr-3" %>
<% else %>
  <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "glyphicon glyphicon-pencil fas fa-user-plus btn btn-warning mr-3" %>
<% end %>