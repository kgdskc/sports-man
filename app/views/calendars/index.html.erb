<%= month_calendar events: @body_statuses do |date, body_statuses| %>
  <%= date.day %>
  <% body_statuses.each do |body_status| %>
    <div>
      <%= link_to body_status_path(body_status), class: "glyphicon glyphicon-pencil btn btn-info fas fa-running" do %>
        <span>STATUS　確認</span>
      <% end %>
    </div>
  <% end %>
<% end %>