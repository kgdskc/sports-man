<% if menu.favorited_by?(current_user) %> <!--いいね表示用の記述-->
  <p>
    <%= link_to menu_favorites_path(menu), method: :delete, remote: true do %>
      <i class="fas fa-heart text-danger"><%= menu.favorites.count %></i>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to menu_favorites_path(menu), method: :post, remote: true do %>
      <i class="fas fa-heart text-primary"><%= menu.favorites.count %></i>
    <% end %>
  </p>
<% end %>