<h2>新規投稿</h2>
<%= form_with model:@menu, local:true do |f| %>
  <dl>
    <dt><%= f.label :献立画像 %></dt>
    <dd><%= f.attachment_field :image %></dd>
    
    <dt><%= f.label :献立名 %></dt>
    <dd><%= f.text_field :menu_name, placeholder: '献立名' %></dd>
    
    <dt><%= f.label :本文 %></dt>
    <dd><%= f.text_area :body, placeholder: '本文' %></dd>

    <dt><%= f.label :推定摂取カロリー %></dt>
    <dd><%= f.text_field :estimation_ingestion_cal, placeholder: '推定摂取カロリー' %></dd>
    
  </dl>
  <%= f.submit "投稿", class: 'btn btn-success btn-lg py-3 col-3 offset-4' %>
<% end %>
<%= link_to "投稿一覧", menus_path %>