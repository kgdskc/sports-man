<h2>マイページ</h2>
<h3>登録情報</h3>
<% if @user == current_user %>
  <%= link_to "マイページを編集する", edit_user_path(@user) %>
<% end %>
<table>
  <tbody>
    <tr>
      <td>ニックネーム：</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>フォロー：</td>
    </tr>
    <tr>
      <td>フォロワー：</td>
    </tr>
    <% if @user == current_user %>
      <tr>
        <td>生年月日：</td>
        <td><%= current_user.birthdate %></td>
      </tr>
      <tr>
        <td>電話番号：</td>
        <td><%= current_user.phone_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @user == current_user %>
  <%= link_to "BODY_STATUS", body_statuses_path %>
