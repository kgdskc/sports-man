<% provide(:title, "マイページ編集") %>
<%= form_with model:current_user,url:user_path(@user), method: :patch ,local:true do |f| %>
  
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <%= f.label :生年月日 %><br />
    <%= f.text_field :birthdate, autofocus: true, autocomplete: "birthdate" %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>
  
  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>
<% end %>
<%= link_to "マイページに戻る", user_path(@user) %>