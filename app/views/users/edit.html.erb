<div class = "container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2 class="mt-4 mb-5 head-line title_h2 fas fa-user-edit">マイページ編集</h2>
      <div class="mb-5">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件の未記入があります
          <% @user.errors.full_messages.each do |message| %>
            <strong><p><%= message %></p></strong><br />
          <% end %>
        <% end %>
      </div>
      <%= form_with model:current_user,url:user_path(@user), method: :patch ,local:true do |f| %>
        
        <div class="form-group col-md-12">
          <%= f.label :ニックネーム, class: "col-md-4 control-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-4", placeholder: 'ニックネーム' %>
        </div>
        
        <div class="form-group col-md-12">
          <%= f.label :生年月日, class: "col-md-4 control-label" %>
          <%= f.date_field :birthdate, autofocus: true, autocomplete: "birthdate", class: "col-md-4 form-control-static" %>
        </div>
        
        <div class="form-group col-md-12">
          <%= f.label :電話番号（ハイフンあり）, class: "col-md-4 control-label" %>
          <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-md-4 form-control-static", placeholder: '090-1234-5678' %>
        </div>
        
        <div class="action mt-5">
          <%= f.submit "編集内容を保存する", class: "btn btn-success mr-3" %>
        </div>
      <% end %>
      <div class="text-center">
        <h4 class="mt-5 mb-5 head-line title_h4 fas fa-users-cog">
          <%= link_to "マイページに戻る", user_path(@user) %>
        </h4>
      </div>
    </div>
  </div>
</div>