<h1>自分の日記</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @body_statuses.each do |body_status| %>
      <tr>
        <td><%= body_status.weight %></td>
        <td><%= body_status.record_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog.id) %></td>
        <td><%= link_to 'Destroy',blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to '日記をかく', new_blog_path %>

<%= month_calendar events: @body_statuses do |date, body_statuses| %>
  <%= date.day %>

  <% body_statuses do |body_statuses| %>
    <div>
      <%= link_to body_statuses.title, body_statuses %>
    </div>
  <% end %>
<% end %>