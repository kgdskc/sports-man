<div class = "container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2 class="mt-4 mb-5 head-line title_h2 fas fa-user-plus">パスワードの再設定</h2>
      <%= form_with model: @user, url: password_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group col-md-12">
          <%= f.label :メールアドレス, class: "col-md-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4 form-control-static", placeholder: 'sample@example.com' %>
        </div>
      
        <div class="action mt-5">
          <%= f.submit "送信",class: 'btn btn-outline-warning btn-lg' %>
        </div>
      <% end %>
      <div class="text-center">
        <h4 class="mt-5 mb-3 head-line title_h4 fas fa-sign-in-alt">
          <%- if controller_name != 'sessions' %>
            <%= link_to "ログイン", new_session_path(resource_name) %><br />
          <% end %>
        </h4>
        <br />
        <h4 class="mb-5 head-line title_h4 fas fas fa-user-plus">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "新規登録", new_registration_path(resource_name) %><br />
          <% end %>
        </h4>
      </div>
    </div>
  </div>
</div>
