<div class = "container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2 class="mt-4 mb-5 head-line title_h2 fas fa-user-plus">新規会員編集</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group col-md-12">
          <%= f.label :ニックネーム, class: "col-md-4 control-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-4", placeholder: 'ニックネーム' %>
        </div>
    
        <div class="form-group col-md-12">
          <%= f.label :生年月日, class: "col-md-4 control-label" %>
          <%= f.date_field :birthdate, autofocus: true, autocomplete: "birthdate", class: "col-md-4 form-control-static" %>
        </div>
        
        <div class="form-group col-md-12">
          <%= f.label :電話番号（ハイフンあり）, class: "col-md-4 control-label" %>
          <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-md-4 form-control-static", placeholder: '090-1234-5678' %>
        </div>
      
        <div class="form-group col-md-12">
          <%= f.label :メールアドレス, class: "col-md-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4 form-control-static", placeholder: 'sample@example.com' %>
        </div>
      
        <div class="form-group col-md-12">
          <%= f.label :パスワード, class: "col-md-4 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-md-4 form-control-static password", placeholder: 'パスワード' %>
        </div>
      
        <div class="form-group col-md-12">
          <%= f.label :（確認用）, class: "col-md-4 control-label"%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-4 form-control-static password", placeholder: '（確認用）' %>
        </div>
      
        <div class="action mt-5">
          <%= f.submit "新規登録", class: 'btn btn-outline-secondary btn-lg' %>
        </div>
      <% end %>
      <div class="text-center">
        <h4 class="mt-5 mb-5 head-line title_h4 fas fa-users-cog">
          <%- if controller_name != 'sessions' %>
            <%= link_to "ログイン", new_session_path(resource_name) %>
          <% end %>はこちら
        </h4>
      </div>
    </div>
  </div>
</div>


